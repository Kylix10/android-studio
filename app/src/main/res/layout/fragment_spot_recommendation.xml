<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 顶部标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="个性化景点推荐"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- 推荐结果标题 -->
        <TextView
            android:id="@+id/tv_recommendation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="为您推荐的景点"
            android:textColor="@color/teal_200"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 推荐景点1 -->
        <LinearLayout
            android:id="@+id/layout_recommendation_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/recommendation_background"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_spot_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_spot_category_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/teal_500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_spot_description_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 推荐景点2 -->
        <LinearLayout
            android:id="@+id/layout_recommendation_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/recommendation_background"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_spot_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_spot_category_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/teal_500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_spot_description_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 推荐景点3 -->
        <LinearLayout
            android:id="@+id/layout_recommendation_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/recommendation_background"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_spot_name_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_spot_category_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/teal_500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_spot_description_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 相似景点标题 -->
        <TextView
            android:id="@+id/tv_similar_spots_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="您可能也会喜欢"
            android:textColor="@color/teal_200"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 相似景点列表 -->
        <LinearLayout
            android:id="@+id/layout_similar_spots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <!-- 将由代码动态添加内容 -->
        </LinearLayout>

    </LinearLayout>
</ScrollView> 