<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:fitsSystemWindows="false">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"/>

    <Button
        android:id="@+id/clearMarkersButton"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:layout_height="45dp"
        android:text="清空标记"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_corner_background"
        android:layout_toLeftOf="@id/facility_search_button"/>

    <Button
        android:id="@+id/facility_search_button"
        android:layout_width="wrap_content"

        android:text="设施查找"
        android:padding="4dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_corner_background"
        android:layout_toLeftOf="@id/route_planning_button"/>

    <Button
        android:id="@+id/route_planning_button"
        android:layout_width="wrap_content"

        android:text="路线规划"
        android:padding="4dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_corner_background"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_wrapper_background"
        android:gravity="center_vertical"
        android:padding="8dp">  <!-- 减小内边距 -->

    <EditText
        android:id="@+id/address_search_edit_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:hint="请输入地址"
        android:imeOptions="actionSearch"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textSize="14sp"
        android:layout_gravity="center_vertical" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="搜索"
        android:padding="4dp"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/searchbutton_back"/>  <!-- 使用圆形按钮背景 -->
</LinearLayout>


    </RelativeLayout>